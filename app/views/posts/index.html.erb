<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4">
      Posts: <%= Post.count %>
    </h1>
    <%= link_to 'New Post', new_post_path, class: "btn btn-outline-primary btn-sm" %>
  </div>

  <div class="table-responsive">
    <table class="table table-sm table-hover">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Date</th>
          <th>Title</th>
          <th>Content</th>
          <th>Published?</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.created_at.strftime("%d/%m/%Y") %></td>
            <td><%= post.title %></td>
            <td><%= truncate(post.content, length: 50) %></td>
            <td>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" disabled <%= 'checked' if post.published? %>>
              </div>
            </td>
            <td><%= link_to 'Show', post, class: "btn btn-link btn-sm" %></td>
            <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-link btn-sm" %></td>
            <td>
              <%= link_to 'Delete', post, method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: "btn btn-link text-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
